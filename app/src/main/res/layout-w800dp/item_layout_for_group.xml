<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layoutGroupRoot"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingTop="@dimen/dim_10dp"
    android:layout_weight="3"
    android:paddingBottom="@dimen/dim_10dp">

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tvGroupId"
        style="@style/GroupItemTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1.2"
        android:text="sfdasdf"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="1">

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tvGroupName"
            android:layout_marginLeft="10dp"
            style="@style/GroupItemTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:text="sfdasdf" />

        <ImageView
            android:id="@+id/sort"
            android:layout_width="@dimen/dim_20dp"
            android:layout_height="@dimen/dim_20dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/dim_10dp"
            android:clickable="true"
            android:visibility="invisible"
            android:src="@drawable/sort" />

    </LinearLayout>


    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tvLeaderName"
        style="@style/GroupItemTextView"
        android:layout_width="150dp"
        android:gravity="center_horizontal"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tvGroupStatus"
        style="@style/GroupItemTextView"

        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text=""
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:orientation="horizontal">

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tvAddStudent"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/lato_regular"
            android:gravity="center"
            android:text="Add"
            android:textColor="@color/colorBlueLight"
            android:textSize="@dimen/dim_18sp" />

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">


            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tvViewGroup"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:layout_marginEnd="@dimen/dim_5dp"
                android:fontFamily="@font/lato_regular"
                android:gravity="center"
                android:text="@string/view"
                android:textColor="@color/colorBlueLight"
                android:textSize="@dimen/dim_18sp" />

            <!-- <View
                 android:id="@+id/view"
                 android:layout_width="2dp"
                 android:layout_height="match_parent"
                 android:background="@color/colorBlueLight" />-->

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tvDeleteGroup"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvViewGroup"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/dim_5dp"
                android:fontFamily="@font/lato_regular"
                android:gravity="center"
                android:text="@string/delete"
                android:textColor="@color/colorBlueLight"
                android:textSize="@dimen/dim_18sp" />
        </RelativeLayout>

    </LinearLayout>


</LinearLayout>
